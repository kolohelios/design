extends ../index
block content
  #archeeve
    #topcontainer
      img#logo(src="/assets/archeeve/logo.png")
      img#oplaward(src="/assets/archeeve/one-page-love-award-right.png")
      h1 THE MOST USEFUL APP TO ORGANISE YOUR BOOKMARKS
      #buttons
        button GET IT FOR MAC
        button GET IT FOR WINDOWS
      img#appimg(src="/assets/archeeve/app.png")
    #featurescontainer
      h1#featuresheader FEATURES
      ul.row
        li
          i.fa.fa-search.fa-2x
          p.headers SEARCH
          p.desc Search bookmarks by title or description
        li
          i.fa.fa-folder-open.fa-2x
          p.headers ORGANISE
          p.desc Organise bookmarks with collections and tags
        li
          i.fa.fa-star.fa-2x
          p.headers FAVORITES
          p.desc Find favorites bookmarks with ease
        li
          i.fa.fa-th-large.fa-2x
          p.headers GRID/LIST
          p.desc Switch between grid or list view
      ul.row
        li
          i.fa.fa-picture-o.fa-2x
          p.headers SCREENSHOTS
          p.desc Archeeve automatically generates screenshot of each bookmark
        li
          i.fa.fa-globe.fa-2x
          p.headers MULTILINGUAL
          p.desc Archeeve speaks in your language *
        li
          i.fa.fa-refresh.fa-2x
          p.headers SYNC
          p.desc Sync your bookmarks with Pocket
        li
          i.fa.fa-download.fa-2x
          p.headers IMPORT/EXPORT
          p.desc Import/Export of bookmark files
      p#note * English, Polish, German, Spanish, Portuguese, Turkish, Dutch, French
    #screenshotscontainer
      h1 SCREENSHOTS
      #test
        ul.row-screenshots
          li: img.screenshot(src="/assets/archeeve/archeeve1.png")
          li: img.screenshot(src="/assets/archeeve/archeeve2.png")
          li: img.screenshot(src="/assets/archeeve/archeeve3.png")
        ul.row-screenshots
          li: img.screenshot(src="/assets/archeeve/archeeve4.png")
          li: img.screenshot(src="/assets/archeeve/archeeve5.png")
          li: img.screenshot(src="/assets/archeeve/archeeve6.png")
        ul.row-screenshots
          li: img.screenshot(src="/assets/archeeve/archeeve7.png")
          li: img.screenshot(src="/assets/archeeve/archeeve8.png")
    #closingcontainer
      h1 GET THE APP NOW FOR $4.99
      p Every transaction on Selz happens through an encrypted HTTP Secure connection.
